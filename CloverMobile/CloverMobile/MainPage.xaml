            	<TextBlock Canvas.Left="37" Canvas.Top="356" Height="30" x:Name="errorMessageTextBlock" Text="" Width="380" Foreground="Red" />
            	<PasswordBox Canvas.Left="33" Canvas.Top="286" Height="71" x:Name="passwordTextBox" Width="405" />
            </Canvas>

