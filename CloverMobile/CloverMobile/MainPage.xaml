<phone:PhoneApplicationPage 
    x:Class="CloverMobile.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="656" d:DesignHeight="480"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="PortraitOrLandscape" Orientation="Portrait"
    xmlns:my="clr-namespace:AmCharts.Windows.QuickCharts;assembly=AmCharts.Windows.QuickCharts.WP" DataContext="{Binding}"
    shell:SystemTray.IsVisible="True" Loaded="PhoneApplicationPage_Loaded" Unloaded="PhoneApplicationPage_Loaded">
    
	<phone:PhoneApplicationPage.Resources>
        <Storyboard x:Name="rotateClover" SpeedRatio="0.5" RepeatBehavior="Forever">
            <DoubleAnimation Duration="0:0:2" To="360" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" Storyboard.TargetName="image" d:IsOptimized="True" x:Name="myAnimation" />
        </Storyboard>
        <Storyboard x:Name="MainScreenLoad">
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="ApplicationTitle">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-257"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-13"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-1"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-13"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="ApplicationTitle">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-7"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-1"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-3"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="PageTitle">
        		<EasingDoubleKeyFrame KeyTime="0" Value="509"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-9"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-13"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="PageTitle">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-6"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="2"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="image">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-391"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-2"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="9"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.404" Value="27.484"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-3"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.508" Value="10"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="image">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-17"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-15"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-14"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.404" Value="-11.043"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-15"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="textBlock1">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-417"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.296" Value="29"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.504" Value="-11"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="textBlock1">
        		<EasingDoubleKeyFrame KeyTime="0" Value="-10"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.296" Value="-12"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.504" Value="-10"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="textBlock2">
        		<EasingDoubleKeyFrame KeyTime="0" Value="366"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.296" Value="-35"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.492" Value="1"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="textBlock2">
        		<EasingDoubleKeyFrame KeyTime="0" Value="6"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.296" Value="2"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.492" Value="-3"/>
        	</DoubleAnimationUsingKeyFrames>
        	<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)" Storyboard.TargetName="image">
        		<DiscreteObjectKeyFrame KeyTime="0:0:0.5">
        			<DiscreteObjectKeyFrame.Value>
        				<HorizontalAlignment>Stretch</HorizontalAlignment>
        			</DiscreteObjectKeyFrame.Value>
        		</DiscreteObjectKeyFrame>
        		<DiscreteObjectKeyFrame KeyTime="0:0:0.508">
        			<DiscreteObjectKeyFrame.Value>
        				<HorizontalAlignment>Center</HorizontalAlignment>
        			</DiscreteObjectKeyFrame.Value>
        		</DiscreteObjectKeyFrame>
        	</ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Style x:Key="SerialChartStyle1" TargetType="my:SerialChart">
        	<Setter Property="Template">
        		<Setter.Value>
        			<ControlTemplate TargetType="my:SerialChart">
        				<Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
        					<Grid>
        						<Grid.RowDefinitions>
        							<RowDefinition/>
        							<RowDefinition Height="Auto"/>
        						</Grid.RowDefinitions>
        						<my:ValueAxis x:Name="PART_ValueAxis" Foreground="{TemplateBinding AxisForeground}" HorizontalAlignment="Right" Margin="0,0,0,-2" Grid.Row="0" Canvas.ZIndex="100" Opacity="0"/>
        						<my:CategoryAxis x:Name="PART_CategoryAxis" Foreground="{TemplateBinding AxisForeground}" Grid.Row="1" Opacity="0"/>
        						<Border Background="{TemplateBinding PlotAreaBackground}" Grid.Row="0">
        							<my:ValueGrid x:Name="PART_ValueGrid" Foreground="{TemplateBinding GridStroke}"/>
        						</Border>
        						<Border x:Name="PART_GraphCanvasDecorator" Grid.Row="0">
        							<Canvas x:Name="PART_GraphCanvas" Background="Transparent"/>
        						</Border>
        						<my:Legend x:Name="PART_Legend" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="0" Visibility="{TemplateBinding LegendVisibility}" VerticalAlignment="Top"/>
        						<Canvas Grid.Row="0">
        							<my:Balloon x:Name="PART_Balloon" BorderBrush="{TemplateBinding AxisForeground}" BorderThickness="2" Visibility="Collapsed"/>
        						</Canvas>
        					</Grid>
        				</Border>
        			</ControlTemplate>
        		</Setter.Value>
        	</Setter>
        </Style>
    </phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="GREENDEL MOBILE" Style="{StaticResource PhoneTextNormalStyle}" RenderTransformOrigin="0.5,0.5">
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="PageTitle" Text="Main" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}" FontSize="72" RenderTransformOrigin="0.5,0.5" >
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,0,0">
            
            <my:SerialChart x:Name="powerConsumptionChart" DataSource="{Binding DataUnit}" CategoryValueMemberPath="time"
                         AxisForeground="White"
                         PlotAreaBackground="Black"
                         GridStroke="{x:Null}" Margin="100,92,100,320" FontSize="10" LegendVisibility="Collapsed" HorizontalAlignment="Center" Style="{StaticResource SerialChartStyle1}">
                <my:SerialChart.Graphs>
                    <my:LineGraph ValueMemberPath="value" Title="Power Consumption" Brush="#FF54EF00" />
                    <!--<my:ColumnGraph ValueMemberPath="val2" Title="Column #2" Brush="#8000FF00" ColumnWidthAllocation="0.4" />-->
                    <!--<my:AreaGraph ValueMemberPath="val3" Title="Area #1" Brush="#80FF0000" />-->
                </my:SerialChart.Graphs>
            </my:SerialChart>
            <TextBlock Height="35" HorizontalAlignment="Center" Margin="0,0,0,209" Name="textBlock1" Text="Current power consumption:" VerticalAlignment="Bottom" Width="266" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" >
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Height="58" HorizontalAlignment="Center" Margin="0,0,0,150" Name="currentPowerConsumptionTextBlock" Text="powerinkw" VerticalAlignment="Bottom" FontSize="32" RenderTransformOrigin="0.974,0.466" >
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <Canvas Height="529" HorizontalAlignment="Left" Margin="8,8,0,0" Name="splashScreen" VerticalAlignment="Top" Width="444" Visibility="Collapsed" Background="Black">
                 <TextBox Height="72" HorizontalAlignment="Left" Margin="23,138,0,0" Name="userNameTextBox" Text="" VerticalAlignment="Top" Width="421"  />
                <TextBlock Height="30" HorizontalAlignment="Left" Margin="34,102,0,0" Name="userNameTextBlock" Text="User Name" VerticalAlignment="Top" />
                <TextBlock Height="30" HorizontalAlignment="Left" Margin="34,242,0,0" Name="passwordTextBlock" Text="Password" VerticalAlignment="Top" />
                <Button Canvas.Left="143" Canvas.Top="393" Content="Log In" Height="71" Name="loginButton" Width="160" Click="loginButton_Click" />
                <TextBlock Canvas.Left="37" Canvas.Top="356" Height="30" Name="errorMessageTextBlock" Text="" Width="380" Foreground="Red" />
                <PasswordBox Canvas.Left="33" Canvas.Top="286" Height="71" Name="passwordTextBox" Width="405" />
            </Canvas>

                <!--
            <HyperlinkButton Content="Settings" Height="30" HorizontalAlignment="Left" Margin="18,531,0,0" Name="hyperlinkButton1" VerticalAlignment="Top" Width="200" NavigateUri="/CloverMobile;component/Settings.xaml" />
            <HyperlinkButton Content="History" Height="30" HorizontalAlignment="Left" Margin="250,531,0,0" Name="hyperlinkButton2" VerticalAlignment="Top" Width="200" NavigateUri="/CloverMobile;component/History.xaml" />
            -->
        </Grid>
        <Image Grid.Row="1" Height="150" HorizontalAlignment="Left" Margin="135,377,0,0" Name="currentWeather" Stretch="Fill" VerticalAlignment="Top" Width="200" />
    </Grid>
 
    <!--Sample code showing usage of ApplicationBar-->
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <!--<shell:ApplicationBarIconButton IconUri="/Icons/appbar.back.rest.png" Text="Back" />-->
            <shell:ApplicationBarIconButton IconUri="/Icons/appbar.feature.settings.rest.png" Text="Settings" Click="ApplicationBarIconButtonSettings_Click" />
            <shell:ApplicationBarIconButton IconUri="/Icons/appbar.edit.rest.png" Text="Control" Click="ApplicationBarControlIconButtonControl_Click" />
            <shell:ApplicationBarIconButton IconUri="/Icons/appbar.folder.rest.png" Text="History" Click="ApplicationBarIconButtonHistory_Click" />        
            <!--
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text=""/>
                <shell:ApplicationBarMenuItem Text=""/>
            </shell:ApplicationBar.MenuItems>
            -->
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>