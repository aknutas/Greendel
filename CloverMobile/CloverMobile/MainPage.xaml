    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->

        <!--TitlePanel contains the name of the application and page title-->

        <!--TitlePanel contains the name of the application and page title-->
    <!--TitlePanel contains the name of the application and page title-->
        <Image x:Name="image1" Margin="0,-530,-1903,-362" Grid.RowSpan="2" Source="/Image5.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
        	<Image.RenderTransform>
        		<CompositeTransform/>
        	</Image.RenderTransform>
        </Image>
    <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="GREENDEL MOBILE" Style="{StaticResource PhoneTextNormalStyle}" RenderTransformOrigin="0.5,0.5">
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="PageTitle" Text="Main" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}" FontSize="72" RenderTransformOrigin="0.5,0.5" >
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,0,0">
            <Image x:Name="image" Margin="122,65,140,278" Source="Graphics/Clover.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <CompositeTransform />
                </Image.RenderTransform>
                         GridStroke="{x:Null}" Margin="100,92,100,320" FontSize="10" LegendVisibility="Collapsed" HorizontalAlignment="Center" Style="{StaticResource SerialChartStyle1}">
            <TextBlock Height="35" HorizontalAlignment="Left" Margin="104,291,0,0" x:Name="textBlock1" Text="Current power consumption:" VerticalAlignment="Top" Width="266" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" >
                    <my:LineGraph ValueMemberPath="value" Title="Power Consumption" Brush="#FF54EF00" />
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Height="58" HorizontalAlignment="Left" Margin="138,326,0,0" x:Name="textBlock2" Text="power in kW" VerticalAlignment="Top" FontSize="32" RenderTransformOrigin="0.5,0.5" >
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <Image Height="90" HorizontalAlignment="Left" Margin="55,399,0,0" x:Name="solarImage" Stretch="Fill" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.5,0.5" >
            	<Image.RenderTransform>
            		<CompositeTransform/>
            	</Image.RenderTransform>
            </Image>
            <TextBlock Height="30" HorizontalAlignment="Left" Margin="55,495,0,0" x:Name="textBlockSolarTitle" Text="Solar Power" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" >
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <Image Height="90" HorizontalAlignment="Left" Margin="315,399,0,0" x:Name="windImage" Stretch="Fill" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.5,0.5">
                <Image.OpacityMask>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="White" Offset="1" />
                    </LinearGradientBrush>
                </Image.OpacityMask>
                <Image.RenderTransform>
            		<CompositeTransform/>
            	</Image.RenderTransform>
            </Image>
            <TextBlock Height="30" HorizontalAlignment="Right" Margin="0,495,34,0" x:Name="textBlock4" Text="Wind Power" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" >
            	<TextBlock.RenderTransform>
