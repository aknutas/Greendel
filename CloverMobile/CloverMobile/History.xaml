    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent" RenderTransformOrigin="0.5,0.5">
    	<Grid.RenderTransform>
    		<CompositeTransform/>
    	</Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <Image x:Name="background" Margin="-1358,-570,-1358,-4000" Grid.RowSpan="2" Source="/Image5.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Top" Width="2716" Height="1810" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5">
        	<Image.RenderTransform>
        		<CompositeTransform/>
        	</Image.RenderTransform>
        </Image>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28" DataContext="{Binding}">
            <TextBlock x:Name="ApplicationTitle" Text="GREENDEL MOBILE" Style="{StaticResource PhoneTextNormalStyle}" RenderTransformOrigin="0.5,0.5">
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="PageTitle" Text="History" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}" RenderTransformOrigin="0.5,0.5" Height="19" Width="712">
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="24,-8,0,8">
            <!--<HyperlinkButton Content="Back" Height="30" HorizontalAlignment="Left" Margin="131,551,0,0" Name="hyperlinkButton1" VerticalAlignment="Top" Width="200" NavigateUri="/CloverMobile;component/MainPage.xaml" />-->
            <!--<ListBox Height="186" HorizontalAlignment="Left" Margin="12,47,0,0" Name="listBox1" VerticalAlignment="Top" Width="684" FontSize="36" /> -->
            <!--<TextBlock Height="35" HorizontalAlignment="Left" Margin="12,8,0,0" Name="fromInternet" Text="" VerticalAlignment="Top" Width="684" TextWrapping="Wrap" /> -->
            <my:SerialChart x:Name="chart1" DataSource="{Binding DataUnit}" CategoryValueMemberPath="time"
                         AxisForeground="White"
                         GridStroke="#FF5E1E1E" Margin="9,62,8,277" Style="{StaticResource SerialChartStyle2}" LegendVisibility="Collapsed">
            	<my:SerialChart.PlotAreaBackground>
            		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            			<GradientStop Color="Black" Offset="0"/>
            			<GradientStop Color="White" Offset="1"/>
            		</LinearGradientBrush>
            	</my:SerialChart.PlotAreaBackground>
                <my:SerialChart.Graphs>
                    <my:ColumnGraph ValueMemberPath="value" Title="" Brush="Blue" />
                    <!--<my:ColumnGraph ValueMemberPath="val2" Title="Column #2" Brush="#8000FF00" ColumnWidthAllocation="0.4" />-->
                    <!--<my:AreaGraph ValueMemberPath="val3" Title="Area #1" Brush="#80FF0000" />-->
                </my:SerialChart.Graphs>
            </my:SerialChart>
            <ListBox Height="158" HorizontalAlignment="Left" Margin="15,478,0,0" x:Name="sensorsListBox" VerticalAlignment="Top" Width="209" SelectionChanged="sensorsListBox_SelectionChanged" />
            <TextBlock Height="30" HorizontalAlignment="Left" Margin="15,444,0,0" x:Name="sensorsTextBlock" Text="Sensors:" VerticalAlignment="Top" Foreground="#FF44FF00" />
            <TextBlock Height="30" HorizontalAlignment="Right" Margin="0,444,79,0" x:Name="updateTimeSpansTextBlock" Text="Frequency:" VerticalAlignment="Top" Foreground="#FF44FF00" />
            <ListBox Height="98" HorizontalAlignment="Left" Margin="282,478,0,0" x:Name="frequencyListBox" VerticalAlignment="Top" Width="156" SelectionChanged="frequencyListBox_SelectionChanged" />
            <!--<toolkit:DatePicker HorizontalAlignment="Left" Margin="221,597,0,0" Name="datePicker1" VerticalAlignment="Top" />-->
            <!--<toolkit:DatePicker HorizontalAlignment="Left" Margin="546,232,0,0" Name="datePicker2" VerticalAlignment="Top" Width="80" />-->
            <TextBlock Height="30" HorizontalAlignment="Left" Margin="123,386,0,0" x:Name="currentSensorName" Text="" VerticalAlignment="Top" Width="226" FontSize="20" />
            <Button Content="Update" Height="72" HorizontalAlignment="Left" Margin="310,604,0,0" x:Name="button1" VerticalAlignment="Top" Width="138" Click="button1_Click" />
            <toolkit:DatePicker HorizontalAlignment="Left" x:Name="startDatePicker" VerticalAlignment="Top" Height="58" Width="168" ValueStringFormat="{}{0:yyyy-MM-dd}" FontSize="10" />
            <toolkit:DatePicker HorizontalAlignment="Right" x:Name="endDatePicker" VerticalAlignment="Top" ValueStringFormat="{}{0:yyyy-MM-dd}" FontSize="10" />
            <TextBlock Height="30" HorizontalAlignment="Right" Margin="0,378,11,0" x:Name="unitTextBlock" Text="" VerticalAlignment="Top" Width="65" />
        </Grid>
    </Grid>
 
