            <TextBlock Height="30" HorizontalAlignment="Right" Margin="0,273,343,0" Name="updateTimeSpansTextBlock" Text="Frequency" VerticalAlignment="Top" />
            <ListBox Height="64" HorizontalAlignment="Right" Margin="0,317,282,0" Name="frequencyListBox" VerticalAlignment="Top" Width="194" />
