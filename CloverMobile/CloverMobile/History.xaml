            </my:SerialChart>
            <Button Content="Apply" Height="77" HorizontalAlignment="Left" Margin="512,305,0,0" Name="button1" VerticalAlignment="Top" Width="160" Click="button1_Click_1" />
            <ListBox Height="64" HorizontalAlignment="Left" Margin="14,315,0,0" Name="sensorsListBox" VerticalAlignment="Top" Width="199" />
