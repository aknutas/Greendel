<h1>New reading</h1>

<% form_for(@reading) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.select("sensor_id", Sensor.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'None'}) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', readings_path %>